{
  "identifier": "com.shortgap.app",
  "productName": "ShortGap",
  "version": "0.1.0",
  "build": {
    "frontendDist": "./frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "ShortGap",
        "width": 1020,
        "height": 600,
        "minWidth": 1020,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"]
  }
}
